{
    "recipe": {
        "title": "Pernod Cocktail ",
        "ingredients": [
            "2 ounces Pernod",
            "1/2 ounce water",
            "1 dash sugar syrup",
            "1 dash Angostura bitters",
            "3 or 4 ice cubes"
        ],
        "instructions": [
            "Combine all ingredients in a cocktail shaker and shake vigorously. Strain into a cocktail glass."
        ],
