    "recipe": {
        "title": "Berry, Beet, Mint, Lime, and Chia Seed Smoothie ",
        "ingredients": [
            "3/4 cup almond milk",
            "3/4 cup frozen blackberries and/or blueberries",
            "1/4 cup grated beet (from about 1 small)",
            "1/4 cup mint leaves",
            "2 tablespoons fresh lime juice",
            "1 tablespoon ground chia seeds",
            "1 tablespoon honey",
            "Pinch of kosher salt"
        ],
        "instructions": [
            "Using smoothie or ice crush setting, pur\u00e9e almond milk, blackberries, beet, mint, lime juice, chia seeds, honey, salt, and 1/2 cup ice in a blender until smooth."
        ],
