    "recipe": {
        "title": "Mulled Wine with Citrus ",
        "ingredients": [
            "1 750-ml bottle dry red wine",
            "1 cup sugar",
            "1/2 cup fresh lemon juice",
            "2 lemons, cut into 1/4-inch-thick rounds",
            "1 orange, cut into 1/4-inch-thick rounds",
            "3 cinnamon sticks, broken in half",
            "24 whole cloves",
            "1 teaspoon whole allspice"
        ],
        "instructions": [
            "Combine all ingredients in heavy large saucepan. Cover and cook over low heat 1 hour to blend flavors (do not boil).",
            "Ladle hot wine into mugs."
        ],
